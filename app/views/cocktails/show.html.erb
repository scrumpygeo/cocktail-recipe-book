<%= @cocktail.name  %>
 <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="fa fa-trash"><span class="ml-3">Delete Cocktail</span> </i>
<% end %>

<div>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><span><%=dose.ingredient.name %>  :  <%= dose.description %>        
                   <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose "> </i>
            <% end %>
        
        </li>
        <% end %>
    </ul>
</div>
<div>
  <%= link_to new_cocktail_dose_path(@cocktail) do %>
  <i class="fas fa-glass-martini mb-3 ">Add new ingredient</i>
  <% end %>
</div>
        
